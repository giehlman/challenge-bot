{
  "config": {
    "xpath_message": "//div[@class='lp_input_area']//textarea",
    "xpath_submit": "//button[@class='lp_send_button']"
  },
  "rampUp": [
    {
      "wait": 0,
      "xpath": "",
      "action": "get",
      "args": "https://liveperson.com"
    },
    {
      "wait": 60,
      "xpath": "//div[starts-with(@id, 'LPMcontainer')]",
      "action": "click"
    },
    {
      "wait": 20,
      "xpath": "//div[@class='lp_survey_container']",
      "action": ""
    },
    {
      "wait": 0,
      "xpath": "//*[contains(text(),'representatives will be back shortly')]",
      "action": "return"
    },
    {
      "wait": 15,
      "xpath": "//div[contains(text(),'What is your name?')]/parent::div//input",
      "action": "sendKeys",
      "args": "Steve"
    },
    {
      "wait": 0,
      "xpath": "//div[contains(text(),'Email Address')]/parent::div//input",
      "action": "sendKeys",
      "args": "steveo@getit.de"
    },
    {
      "wait": 0,
      "xpath": "//div[@id='LP_TextFieldQuestion_3']//input",
      "action": "sendKeys",
      "args": ""
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_submit_button']",
      "action": "click"
    },
    {
      "wait": 120,
      "xpath": "//div[contains(text(),'You are now chatting with')]",
      "action": ""
    }
  ],
  "talk": [
    {
      "wait": 0,
      "xpath": "//div[@class='lp_input_area']//textarea",
      "action": "sendKeys",
      "args": "I'm Steve"
    },
    {
      "wait": 2,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_send_button']",
      "action": "click"
    },
    {
      "wait": 0,
      "xpath": "//div[@class='lp_input_area']//textarea",
      "action": "sendKeys",
      "args": "Sorry for my english"
    },
    {
      "wait": 2,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_send_button']",
      "action": "click"
    },
    {
      "wait": 120,
      "xpath": "waitForNewChatline",
      "action": "",
      "args": "//div[@class='lp_chat_line_wrapper lp_agent']//div[@class='lp_chat_line']"
    },
    {
      "wait": 10,
      "xpath": "//div[@class='lp_input_area']//textarea",
      "action": "sendKeys",
      "args": "Do you have free pricing plan? My company has 2 users"
    },
    {
      "wait": 5,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_send_button']",
      "action": "click"
    },
    {
      "wait": 120,
      "xpath": "waitForNewChatline",
      "action": "",
      "args": "//div[@class='lp_chat_line_wrapper lp_agent']//div[@class='lp_chat_line']"
    },
    {
      "wait": 10,
      "xpath": "//div[@class='lp_input_area']//textarea",
      "action": "sendKeys",
      "args": "do you have free plan to try?"
    },
    {
      "wait": 5,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_send_button']",
      "action": "click"
    },
    {
      "wait": 120,
      "xpath": "waitForNewChatline",
      "action": "",
      "args": "//div[@class='lp_chat_line_wrapper lp_agent']//div[@class='lp_chat_line']"
    }
  ],
  "shutdown": [
    {
      "wait": 10,
      "xpath": "//div[@class='lp_input_area']//textarea",
      "action": "sendKeys",
      "args": "Ok cool! Thank for you time! Bye"
    },
    {
      "wait": 5,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_send_button']",
      "action": "click"
    },
    {
      "wait": 5,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_close']",
      "action": "click"
    },
    {
      "wait": 5,
      "xpath": "",
      "action": "sleep"
    },
    {
      "wait": 0,
      "xpath": "//button[@class='lp_confirm_button']",
      "action": "click"
